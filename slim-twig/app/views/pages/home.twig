{% extends 'common.twig' %}

{% block content %}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="http://www.cafeconnections.com.au/cms/includes/phpthumb/phpthumb.php?src=/uploads/images/banner-1-400(2).jpg&w=1920&h=400&zc=1" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://projects.fieldscopeint.com/wp-content/uploads/2018/08/Coffee-And-Snacks-Header.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="http://www.espressoasis.com/images/slides/home5.jpg" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="http://damoderncafe.com/web/wp-content/uploads/2017/01/Slide-1920-x-400-_5.jpg" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://www.nespresso.com/shared_res/mos/free_html/no/coffee-ranges/img/mIntenso_H.jpg" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://d320lc071zqgbn.cloudfront.net/app/uploads/2018/06/HSW-Eat-Drink-Coffee-Roaster.jpg" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="http://tredstone.co.uk/wp-content/uploads/2016/06/tredstone-coffee-shop.jpg" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://beyondbusinessgroups.com.au/wp-content/uploads/2018/12/coffee-solo-microbusiness-Beyond-Business-Groups_1920.jpg?x58257" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div id="articlesDispl">
{% for key in result %}
      <div class="card border-primary mb-3" style="max-width: 70%;">
        <div class="card-header">{{ key.article_title }}</div>
        <div class="card-body">
          <p class="card-text">
              {% if not session.auth %} {{ key.article_content | striptags|slice(0, 100) }} . . .
               <a href="/signup">See more. . .</a> </p> {% else %} {{ key.article_content }} {% endif %}
          <p> {{ key.author_id }} - {{ key.article_date }}</p>
        </div>
      </div>
  {% endfor %}
  </div>
{% endblock %}
