{% extends 'common.twig' %}

{% block content %}
<div class="signup">
  <div id="mrCoffee">
    <img src="http://easynode.github.io/img/logo-jhipster-drink-coffee.svg" id="coffeeLover" alt="coffee lover">
  </div>
  <div id="signUpContent">
    <form>
        <fieldset>
          <legend>Sign Up</legend>
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="exampleInputPseudo1">Pseudo</label>
            <input class="form-control" id="exampleInputPseudo1" placeholder="Pseudo">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </fieldset>
    </form>
  </div>
</div>
{% endblock %}
